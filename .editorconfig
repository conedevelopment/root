root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
indent_style = space
indent_size = 4
trim_trailing_whitespace = true
block_comment_start = /*
block_comment = *
block_comment_end = */

[*.scss]
indent_size = 2

[{*.php,*.js,*.scss}]
max_line_length = 160

[{**.blade.php,tests/**.php}]
max_line_length = unset

[*.md]
trim_trailing_whitespace = false

# Generated files
[yarn.lock]
indent_size = unset
max_line_length = unset
[public/build/**]
indent_size = unset
insert_final_newline = unset
trim_trailing_whitespace = false
max_line_length = unset
[.vscode/*.json]
indent_size = unset
